<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:background="@color/grey"
    tools:context="com.example.user.sayin.OverallActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/updown"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="3dp">
        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="horizontal"

            android:weightSum="2">

            <LinearLayout

                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/donut_progress"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"

                    >


                </com.github.lzyzsd.circleprogress.DonutProgress>

                <TextView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:text="Income Spent"

                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"

                android:layout_height="match_parent"

                android:layout_marginLeft="15dp"

                android:layout_weight="1"

                android:gravity="center|left"

                android:orientation="vertical"

                android:padding="10dp"

                android:weightSum="2">

                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="0dp"

                    android:layout_weight="1"

                    android:gravity="center|left"

                    android:paddingLeft="5dp"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Money"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/green"/>

                    <TextView
                        android:id="@+id/income_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$4,500.00"
                        android:textSize="20dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Expenses"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/red" />


                    <TextView

                        android:id="@+id/expense_text"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:text="$0.00"

                        android:textSize="20dp" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:orientation="vertical"
            android:weightSum="8"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cash Flow"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+28400"
                    android:textColor="@color/green"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center|end"
                    android:padding="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Your Income"
                    android:gravity="left|center"
                    android:textSize="16sp"/>
                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:id="@+id/roundCornerProgressBar1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:rcBackgroundColor="@color/white_greyish"
                        app:rcMax="100"
                        app:rcProgress="45"
                        app:rcProgressColor="@color/green"
                        app:rcRadius="10dp"
                        app:rcReverse="false"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Your Expenses"
                    android:gravity="left|center"
                    android:textSize="16sp"/>
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/roundCornerProgressBar2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:rcBackgroundColor="@color/white_greyish"
                    app:rcMax="100"
                    app:rcProgress="30"
                    app:rcProgressColor="@color/red"
                    app:rcRadius="10dp"
                    app:rcReverse="false"
                    />
                 </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="10dp">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>